<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardPlacesList"
    style="@style/Widget.App.Card">

    <RelativeLayout
        android:id="@+id/layoutPlacesList"
        style="@style/Widget.App.ConstraintLayout.Nested">

        <LinearLayout
            android:id="@+id/layoutPlacesListTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagePlacesListIcon"
                style="@style/Widget.App.ImageView"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_app_location_on" />

            <TextView
                android:id="@+id/textPlacesListTitle"
                style="@style/Widget.App.Text.Title"
                android:layout_marginStart="16dp"
                android:text="Location 1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutPlacesListDemand"
            style="@style/Widget.App.Label.Small.Gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">

            <ImageView
                style="@style/Widget.App.Label.Small.Gray.Image.Content"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_app_widgets" />

            <TextView
                android:id="@+id/textPlacesListDemand"
                style="@style/Widget.App.Label.Small.Gray.Text.Content.Bold"
                android:layout_marginStart="8dp"
                android:text="360" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutPlacesListTitle"
            android:layout_alignStart="@+id/layoutPlacesListTitle"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/textPlacesListProfileValue"
                style="@style/Widget.App.Text.Content.Small.Bold"
                android:text="Destination" />

            <TextView
                android:id="@+id/textPlacesListDebugId"
                style="@style/Widget.App.Text.Content.Small"
                android:layout_marginStart="16dp"
                android:layout_marginTop="0dp"
                android:text="08102"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text2"
            android:layout_alignStart="@+id/text2"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                style="@style/Widget.App.Text.Content.Small"
                android:layout_marginTop="0dp"
                android:text="Demand" />

            <TextView
                android:id="@+id/textPlacesListDemandsValue"
                style="@style/Widget.App.Text.Content.Small.Bold"
                android:layout_marginStart="8dp"
                android:text="0.0" />

        </LinearLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>