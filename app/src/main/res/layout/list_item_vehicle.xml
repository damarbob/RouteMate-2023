<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardVehiclesList"
    style="@style/Widget.App.Card">

    <RelativeLayout
        android:id="@+id/layoutVehiclesList"
        style="@style/Widget.App.ConstraintLayout.Nested">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonVehiclesListVehicleColor"
            style="@style/Widget.App.Button.IconButton"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/blue_50"
            android:padding="8dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/layoutVehiclesListTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageVehiclesListIcon"
                style="@style/Widget.App.ImageView"
                android:layout_marginEnd="16dp"
                app:srcCompat="@drawable/ic_app_directions_car" />

            <TextView
                android:id="@+id/textVehiclesListTitle"
                style="@style/Widget.App.Text.Title"
                android:text="Vehicle 1" />


            <LinearLayout
                android:id="@+id/layoutVehiclesListIsDefault"
                style="@style/Widget.App.Label.Small.Opaque"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="0dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/Widget.App.Label.Small.Opaque.Text.Content.Bold"
                    android:layout_marginTop="0dp"
                    android:text="Default"
                    android:visibility="visible" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageVehiclesListOnlineIcon"
                style="@style/Widget.App.ImageView"
                android:layout_width="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                app:srcCompat="@drawable/ic_app_circle"
                app:tint="@color/green_500" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutVehiclesListDemand"
            style="@style/Widget.App.Label.Small.Gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">

            <ImageView
                style="@style/Widget.App.Label.Small.Gray.Image.Content"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_app_widgets" />

            <TextView
                android:id="@+id/textVehiclesListCapacity"
                style="@style/Widget.App.Label.Small.Gray.Text.Content.Bold"
                android:layout_marginStart="8dp"
                android:text="360" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutVehiclesListTitle"
            android:layout_alignStart="@+id/layoutVehiclesListTitle"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/textVehiclesListProfileValue"
                style="@style/Widget.App.Text.Content.Small.Bold"
                android:text="Driving" />

        </LinearLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>