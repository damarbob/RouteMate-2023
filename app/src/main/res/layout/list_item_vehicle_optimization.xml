<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardDistancesList"
    style="@style/Widget.App.Card">

    <RelativeLayout
        android:id="@+id/layoutDistancesList"
        style="@style/Widget.App.ConstraintLayout.Nested">

        <ImageView
            android:id="@+id/imageOptimizationListIcon"
            style="@style/Widget.App.ImageView"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/ic_app_directions_car" />

        <TextView
            android:id="@+id/textOptimizationList"
            style="@style/Widget.App.Text.Content.Title"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/imageOptimizationListIcon"
            android:text="Vehicle" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>