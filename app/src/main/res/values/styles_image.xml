        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tint">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.App.ImageView.Background.Muted" parent="Theme.Material3.DayNight">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_marginBottom">-16dp</item>
        <item name="android:layout_marginEnd">-16dp</item>
        <item name="android:alpha">0.1</item>
        <item name="layout_wrapBehaviorInParent">skipped</item>
        <item name="tint">?attr/colorOnSecondary</item>
    </style>

</resources>